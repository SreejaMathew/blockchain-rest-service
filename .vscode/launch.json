{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run REST API (Node.js)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "restart": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
